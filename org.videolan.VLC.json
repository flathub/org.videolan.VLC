    "org.videolan.VLC.Plugin": {
      "versions": "3-5.15;3-20.08",
      "directory": "share/vlc/extra",
      "subdirectories": true,
      "merge-dirs": "plugins",
      "add-ld-path": "lib",
      "no-autodownload": true,
      "autodelete": true
    }
  },
